<div class="container">
  <div class="header clearfix text-center">
    <%= link_to 'Reminder list', root_path, class: 'header-title' %>
  </div>

  <div class='col-sm-8 col-sm-offset-2'>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">To do list</h3>
      </div>
      <div class="panel-body">
        <div class='row'>
          <div class='col-sm-8 col-sm-offset-2'>
            <%= link_to "New Task", new_task_path, class: 'btn btn-warning center-block', id: "new_link", remote: true %>
          </div>

          <div class='col-sm-12'>
            <hr>  
            <h4 class='task-title'>Incomplete Tasks</h4>
            <div class="tasks" id="incomplete_tasks">
              <%= render @incomplete_tasks %>
            </div>

            <h4 class='task-title'>Complete Tasks</h4>
            <div class="tasks" id="complete_tasks">
              <%= render @complete_tasks %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> <!-- /container -->
